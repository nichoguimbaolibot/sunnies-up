<% layout("layout") -%>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-xs-4 col-sm-4"></div>
		<div class="col-md-4 col-xs-4 col-sm-4">
		<h1 class="text-center">Edit Comment</h1>
		<form action="/product/<%= product_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" name="comment[text]" value="<%= comment.text %>" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-success">Submit</button>
			</div>
		</form>	
		</div>
		
	</div>
</div>