<% layout("layout") -%>
<div class="container">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
				<h1>Add new Comment <%= product.name %></h1>
				<form action="/product/<%= product._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="comments..">
				</div>
				<div class="form-group text-center">
					<button class="btn btn-primary form-control">Submit</button>
				</div>				
				</form>
		</div>
	</div>
</div>