<% layout("layout") -%>

<div class="container">
	<div class="row">
	<div class="col-md-3">
	<div class="form-group">
	<label>Product Settings: </label>
		<a href="/add-category" class="form-control btn btn-success">Add Category</a>
		<a href="/product/new" class="form-control btn btn-success">Add Product</a>
		<div class="dropdown">
			<button class="btn btn-success form-control dropdown-toggle" type="button" data-toggle="dropdown">Category Settings<span class="caret"></span></button>
			<ul class="dropdown-menu">
				<% categories.forEach(function(category){ %>
					<li><a href="/edit-category/<%= category._id %>"><%= category.name %></a></li>
				<% }); %>
			</ul>
		</div>
		</div>
  </div>
	</div>

<div class="form-group">
    <form action="/product" method="GET" class="form-inline">
              <div class="form-group">
                <input type="text" name="search" placeholder="Product search...." class="form-control">
                <input type="submit" value="Search" class="btn btn-md btn-default">
              </div>
    </form>

	</div>
	<div class="col-md-12 col-sm-12">
	<table class="table table-bordered">

	<thead>
		<th>Image</th>
		<th>Product Name</th>
		<th>Price</th>
		<th>Category</th>
		<th></th>
	</thead>
		<% product.forEach(function(product){ %>
		<tr>
			<% if(product.image.search("http://lorempixel.com") === 0){ %>
			<td><div class="thumbnail"><img style="height:50px;width:50px;" src="<%= product.image %>"></div></td>
			<% }else{ %>
			<td><div class="thumbnail"><img style="height:50px;width:50px;" src="http://localhost/nodejs/ecommerce/routes/images/<%= product.image %>"></div></td>
			<% } %>
			<td><%= product.name %></td>
			<td>Php <%= product.price %></td>
			<td><%= product.category.name %></td>
			<td><a class="form-control btn btn-info" href="/product/admin/<%= product._id %>">Show</a></td>
		</tr>
		<% }); %>
	</table>
	</div>
	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="text-center">
		<ul class="pagination">
			<li>
				<% for(var i = 1; i <= pages; i++){ %>
					<% if(i===1){ %>
						<li><a href="/product"><%= i %></a></li>
					<% } else{ %>
						<li><a href="/product/page/<%= i %>"><%= i %></a></li>
					<% } %>
				<% } %>
			</li>
		</ul>
		</div>
		</div>
		</div>
</div>